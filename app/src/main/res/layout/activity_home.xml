<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    tools:visibility="visible"
    tools:context=".views.Home">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/inder"
        android:text="Hello"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="208dp"
        android:fontFamily="@font/inder"
        android:text="Categories"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/inder"
        android:text="What do you like to cook ?"
        android:textColor="#919191"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchBar"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="40dp"
        android:background="#FFFFFF"
        android:focusableInTouchMode="true"
        app:iconifiedByDefault="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:queryBackground="@color/white"
        app:queryHint="Search for recipes....." />

    <androidx.cardview.widget.CardView
        android:id="@+id/home_favButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardBackgroundColor="#FF5722"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/inder"
            android:text="FAVORITES"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            app:srcCompat="@android:drawable/btn_star_big_on" />

    </androidx.cardview.widget.CardView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#EDEDED">

                <ImageView
                    android:id="@+id/breakfastImg"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="24dp"
                    android:clickable="true"
                    android:contentDescription=""
                    android:focusable="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    app:srcCompat="@drawable/breakfast"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/breakfastcategorytext"
                    android:layout_width="125dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="92dp"
                    android:fontFamily="@font/inder"
                    android:text="Breakfast"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/lunchImg"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="192dp"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView9"
                    app:srcCompat="@drawable/lunch" />

                <TextView
                    android:id="@+id/lunchcategorytext"
                    android:layout_width="125dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="184dp"
                    android:layout_marginTop="92dp"
                    android:fontFamily="@font/inder"
                    android:text="Lunch"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/dinnerImg"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginStart="338dp"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView9"
                    app:srcCompat="@drawable/dinner" />

                <TextView
                    android:id="@+id/dinnercategory"
                    android:layout_width="125dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="338dp"
                    android:layout_marginTop="92dp"
                    android:fontFamily="@font/inder"
                    android:text="Dinner"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/dessertImg"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="495dp"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView9"
                    app:srcCompat="@drawable/gratercake" />

                <TextView
                    android:id="@+id/desertcategorytext"
                    android:layout_width="125dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="488dp"
                    android:layout_marginTop="92dp"
                    android:fontFamily="@font/inder"
                    android:text="Desert"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_marginTop="400dp"
        android:background="#D9D9D9"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/cat_recipeList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D9D9D9"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/trendingTitle"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/inder"
                android:text="Trending"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
