<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.Category">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">

            <TextView
                android:id="@+id/textView47"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Categories"
                android:textAlignment="center"
                android:textColor="#0C0C0C"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/cat_homeButton"
                android:layout_width="49dp"
                android:layout_height="39dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.12"
                app:srcCompat="@drawable/home_20" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F5F5F5">

                    <ImageView
                        android:id="@+id/breakfastImg"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="24dp"
                        android:clickable="true"
                        android:contentDescription=""
                        android:focusable="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView6"
                        app:srcCompat="@drawable/breakfast"
                        tools:ignore="ImageContrastCheck" />

                    <TextView
                        android:id="@+id/breakfastcategorytext"
                        android:layout_width="125dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="124dp"
                        android:fontFamily="@font/inder"
                        android:text="Breakfast"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/lunchImg"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_marginStart="184dp"
                        android:layout_marginTop="24dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView9"
                        app:srcCompat="@drawable/lunch" />

                    <TextView
                        android:id="@+id/lunchcategorytext"
                        android:layout_width="125dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="184dp"
                        android:layout_marginTop="124dp"
                        android:fontFamily="@font/inder"
                        android:text="Lunch"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/dinnerImg"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_marginStart="338dp"
                        android:layout_marginTop="24dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView9"
                        app:srcCompat="@drawable/dinner" />

                    <TextView
                        android:id="@+id/dinnercategory"
                        android:layout_width="125dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="338dp"
                        android:layout_marginTop="124dp"
                        android:fontFamily="@font/inder"
                        android:text="Dinner"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/dessertImg"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_marginStart="488dp"
                        android:layout_marginTop="24dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView9"
                        app:srcCompat="@drawable/gratercake" />

                    <TextView
                        android:id="@+id/desertcategorytext"
                        android:layout_width="125dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="488dp"
                        android:layout_marginTop="124dp"
                        android:fontFamily="@font/inder"
                        android:text="Desert"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D9D9D9">

            <LinearLayout
                android:id="@+id/cat_recipeList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D9D9D9"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/categoryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/inder"
                    android:text="category"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>